<%- include('partials/header'); -%>
<div class="box" id="heading"><h1><%= listTitle %></h1></div>

<div class="box">
    <% newListItems.forEach(item => { %>
    <form action="/delete" method="POST">
        <div class="item">
            <input type="checkbox" onChange="this.form.submit()" name="oldItemID" value=<%= item._id %> />
            <p><%= item.name %></p>
        </div>
        <input type="hidden" name="listNameHiddenDel" value=<%= listTitle %> >
    </form>
    <% }); %>

    <form class="item" action="/" method="POST">
        <input
            placeholder="New Item"
            type="text"
            name="newItem"
            autocomplete="off"
        />
        <button type="submit" name="list" value=<%= listTitle %>>Add</button>
    </form>
</div>
<%- include('partials/footer'); -%>
